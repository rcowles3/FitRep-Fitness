<div class="title">
    {{hbsObject}}
    <h1>Welcome {{hbsObject.user.first_name}}</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1>Exercises List</h1>
            {{#each exercises}}
            <form action="/{{this.workout_type}}?_method=GET" method="POST">
                <input type="hidden" name="excercises" value="true">
                <button type="submit">{{this.workout_type}}</button> {{this.exercise}}
            </form>
            {{/each}}
        </div>
        <div class="col-md-4">
            {{#each exercises}}
            <form action="/{{this.exercise}}" method="POST">
                <input type="hidden" name="excercises" value="true">
                <button type="submit" id="workouts" value={{this.exercise}}>{{this.exercise}}</button>
            </form>
            {{/each}}
        </div>
    </div>
</div>
